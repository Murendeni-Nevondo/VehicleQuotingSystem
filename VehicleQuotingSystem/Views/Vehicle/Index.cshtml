@model VehicleQuotingSystem.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Manage Vehices</h4>

<div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Make</th>
          <th scope="col">Model</th>
          <th scope="col">Year</th>
          <th scope="col">Retail Value</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
            @foreach(var vehicle in Model.vehicles)
            {
                <tr>
                  <td>@vehicle.Make</td>
                  <td>@vehicle.Model</td>
                  <td>@vehicle.Year</td>
                  <td>@vehicle.RetailValue</td>
                  @*<td><a href="PolicyHolder/Details/@policyHolder.PolicyHolderId">View</a></td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-right">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVehicleModal" data-bs-whatever="getbootstrap">Add New Vehicle</button>
</div>

@*TODO : Extract to partial view*@
<div class="modal fade" id="addVehicleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Vehicle</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <form method="post" asp-action="AddVehicle">
          <div class="modal-body">

              <div class="mb-3">
                <label for="first-name" class="col-form-label">Make</label>
                <input type="text" class="form-control" id="make" asp-for="Make" required>
              </div>

              <div class="mb-3">
                <label for="last-name" class="col-form-label">Model</label>
                <input type="text" class="form-control" id="model" asp-for="Model" required>
              </div>

              <div class="mb-3">
                <label for="date-of-birth" class="col-form-label">Year</label>
                <input type="number" class="form-control" id="year" asp-for="Year" required>
              </div>

              <div class="mb-3">
                <label for="date-of-birth" class="col-form-label">Retail Value</label>
                <input type="number" class="form-control" id="year" asp-for="RetailValue" required>
              </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>

